<div class="calculator">
    <h2>–ö–∞–ª—å–∫—É–ª—è—Ç–æ—Ä –°–ª–æ–∂–Ω–æ–π –§–æ—Ä–º—É–ª—ã</h2>
    <label for="a">–í–≤–µ–¥–∏—Ç–µ –∑–Ω–∞—á–µ–Ω–∏–µ A:</label>
    <input type="number" id="a" placeholder="–í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ –¥–ª—è A">

    <label for="b">–í–≤–µ–¥–∏—Ç–µ –∑–Ω–∞—á–µ–Ω–∏–µ B:</label>
    <input type="number" id="b" placeholder="–í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ –¥–ª—è B">

    <label for="c">–í–≤–µ–¥–∏—Ç–µ –∑–Ω–∞—á–µ–Ω–∏–µ C:</label>
    <input type="number" id="c" placeholder="–í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ –¥–ª—è C">

    <button onclick="calculate()">üîç</button>

    <div class="result" id="result"></div>
</div>

<script>
    function calculate() {
        // –ü–æ–ª—É—á–∞–µ–º –∑–Ω–∞—á–µ–Ω–∏—è a, b –∏ c
        const a = parseFloat(document.getElementById("a").value);
        const b = parseFloat(document.getElementById("b").value);
        const c = parseFloat(document.getElementById("c").value);

        // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ –≤—Å–µ –∑–Ω–∞—á–µ–Ω–∏—è –≤–≤–µ–¥–µ–Ω—ã
        if (isNaN(a) || isNaN(b) || isNaN(c)) {
            document.getElementById("result").innerHTML = "–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –≤—Å–µ –∑–Ω–∞—á–µ–Ω–∏—è.";
            return;
        }

        // –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –¥–µ–ª–µ–Ω–∏–µ –Ω–∞ –Ω–æ–ª—å –¥–ª—è —Ñ–æ—Ä–º—É–ª—ã
        if ((a - 5) === 0 || c === 0 || (a + 3) === 0) {
            document.getElementById("result").innerHTML = "–û—à–∏–±–∫–∞: –¥–µ–ª–µ–Ω–∏–µ –Ω–∞ –Ω–æ–ª—å.";
            return;
        }

        // –§–æ—Ä–º—É–ª–∞: —Å–ª–æ–∂–Ω–∞—è —Å –≤–æ–∑–≤–µ–¥–µ–Ω–∏—è–º–∏ –≤ —Å—Ç–µ–ø–µ–Ω—å, –∫–æ—Ä–Ω—è–º–∏, –º–æ–¥—É–ª—è–º–∏ –∏ –¥—Ä–æ–±—è–º–∏
        const result = ((a ** 2 + b ** 3) / c) * ((b + 10) / (a - 5)) + Math.sqrt(Math.abs(a - b)) + (c / (a + 3));

        // –í—ã–≤–æ–¥ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞
        document.getElementById("result").innerHTML = "–†–µ–∑—É–ª—å—Ç–∞—Ç: " + result.toFixed(2);
    }
</script>

